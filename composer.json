{
  "name": "elephox/mimey",
  "description": "PHP package for converting file extensions to MIME types and vice versa.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Ralph Khattar",
      "email": "ralph.khattar@gmail.com"
    },
    {
      "name": "Ricardo Boss",
      "email": "contact@ricardoboss.de"
    }
  ],
  "require": {
    "php": "~8.1.0 || ~8.2.0",
    "jetbrains/phpstorm-attributes": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "suggest": {
    "ext-mbstring": "For non-English (user) input parsing"
  },
  "autoload": {
    "psr-4": {
      "Mimey\\": ["src/", "dist/"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mimey\\Tests\\": "tests/src/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "generate-types": "@php bin/generate.php",
    "update-types": "@php bin/update.php"
  }
}
